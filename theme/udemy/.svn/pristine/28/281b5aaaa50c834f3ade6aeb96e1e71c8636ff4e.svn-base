window.onload = function(){  
       $('#my-courses #list ul').hide();
       $('.my-courses-nav .gray-nav li').removeClass('current');
       
       var inprohtml = $('#my-courses #list ul[type="inprogress"]').html();
       var completedhtml = $('#my-courses #list ul[type="completed"]').html();
       var nostarthtml= $('#my-courses #list ul[type="nostart"]').html();
       
       if(inprohtml !=''){

            $('#my-courses #list ul[type="inprogress"]').show();
            $('.my-courses-nav .gray-nav li:eq(0)').addClass('current');

        }
       if(completedhtml !=''){

            $('#my-courses #list ul[type="completed"]').show();
            $('.my-courses-nav .gray-nav li:eq(1)').addClass('current');
       }
       if(nostarthtml !=''){

            $('#my-courses #list ul[type="nostart"]').show();
            $('.my-courses-nav .gray-nav li:eq(2)').addClass('current'); 
        } 
}
