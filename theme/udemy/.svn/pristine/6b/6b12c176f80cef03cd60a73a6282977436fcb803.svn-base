$(function(){
    var ul=$('#my-courses #list ul');
    for(var i=0;i<ul.length;i++){
        var v=$('#my-courses #list ul:eq('+i+')').text();
        if(v !=null){

            $('.my-courses-nav .gray-nav li:eq('+i+')').click();
        }
    }

});