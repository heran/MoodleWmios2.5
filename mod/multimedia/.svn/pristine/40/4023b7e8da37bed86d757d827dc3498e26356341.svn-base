/**
 * Define all the backup steps that will be used by the backup_page_activity_task
 */

/**
 * Define the complete page structure for backup, with file and id annotations
 */
class backup_multimedia_activity_structure_step extends backup_activity_structure_step {

    protected function define_structure() {

        // To know if we are including userinfo
        $userinfo = $this->get_setting_value('userinfo');

        // Define each element separated
        $multimedia = new backup_nested_element('multimedia', array('id'), array(
            'course', 'name', 'intro', 'introformat', 'content',
            'contentformat', 'display', 'displayoptions',
            'type','completion_max','completionenabled', 'timemodified'));
        
        $completions = new backup_nested_element('completions');
        $completion = new backup_nested_element('completion',array('id'),
            array('userid','completion_now','timemodified'));
        $multimedia->add_child($completions);
        $completions->add_child($completion);

        // Build the tree
        // (love this)

        // Define sources
        $multimedia->set_source_table('multimedia', array('id' => backup::VAR_ACTIVITYID));
        
        if($userinfo){
            $completion->set_source_table('multimedia_completion', array('mid' => backup::VAR_ACTIVITYID));
            $completion->annotate_ids('user','userid');
        }

        // Define id annotations
        // (none)

        // Define file annotations
        $multimedia->annotate_files('mod_multimedia', 'intro', null); // This file areas haven't itemid

        // Return the root element (page), wrapped into standard activity structure
        return $this->prepare_activity_structure($multimedia);
    }
}
