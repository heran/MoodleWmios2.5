{function name=dict_tree}
<h1>
    <span title="{$data->remark}">{$data->content}</span>
    {if $data->level gt 0}
    <a href="{$url_base}&dict_id={$data->id}" target="_blank">{get_string('edit')}</a>
    {/if}
    <a href="{$url_base}&pid={$data->id}" target="_blank">{get_string('add')}</a>

</h1>
{if count($data->children) gt 0}
<ul>
    {foreach $dict_tree->children as $child}
    <li>{call name=dict_tree data=$child}</li>
    {/foreach}
</ul>
{/if}
{/function}
{call name=dict_tree data=$field_dict_root}