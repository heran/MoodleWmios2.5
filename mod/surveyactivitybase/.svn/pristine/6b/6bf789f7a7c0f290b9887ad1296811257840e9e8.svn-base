        {
            foreach($records as $record)
            {
                foreach(array('one','two','three','four','five','six','seven','eight','nine','ten') as $i)
                {
                    $k = 'dplevel_'.$i;
                    if(empty($record[$k]))
                    {
                        break;
                    }
                    $cmd = '$dim2s';
                    foreach(array('one','two','three','four','five','six','seven','eight','nine','ten') as $j)
                    {              
                        $cmd .= '[\''.$record['dplevel_'.$j].'\']';
                        if($i == $j)
                        {
                            break;
                        }
                    }
                    eval(
                        'if(!isset('.$cmd.'))
                        {
                        '.$cmd.'=array();
                        }'
                    );

                }
            }
            return $dim2s;
        }

